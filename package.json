{
  "name": "vue-automated-i18n",
  "version": "1.1.0",
  "description": "Automates i18n processes; importing, exporting translations and adding new locales or fields etc.",
  "homepage": "https://github.com/trombonist76/vue-automated-i18n",
  "main": "index.js",
  "type": "module",
  "bin": {
    "add-locale": "src/commands/addNewLocale.js",
    "add-field": "src/commands/addNewField.js",
    "add-field-all": "src/commands/addNewField.js",
    "export-locales": "src/commands/exportLocales.js",
    "import-locales": "src/commands/importLocales.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "add-field": "node src/commands/addNewField.js add-field",
    "add-field-all": "node src/commands/addNewField.js add-field-all",
    "add-locale": "node src/commands/addNewLocale.js add-locale",
    "import-locales": "node src/commands/importLocales.js import",
    "export-locales": "node src/commands/exportLocales.js export",
    "prepare": "husky install"
  },
  "keywords": [
    "i18n",
    "locale",
    "vue-i18n",
    "vue",
    "localization",
    "i18n-vue",
    "translation"
  ],
  "author": "trombonist76",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.0",
    "prettier": "^2.8.6",
    "pretty-quick": "^3.1.3"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.3.4",
    "glob": "^10.3.4",
    "yargs": "^17.7.2"
  }
}
